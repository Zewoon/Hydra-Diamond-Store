<body>
  <div class="container">
    <h1>Admin Panel</h1>
    <table>
      <thead>
        <tr>
          <th>Buyer ID</th>
          <th>Payment Method</th>
          <th>Screenshot</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="submission-table"></tbody>
    </table>
  </div>

  <!-- Firebase Libraries -->
  <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-storage.js"></script>

  <!-- Firebase Configuration and Admin Functionality -->
  <script>
    // Firebase configuration
    const firebaseConfig = {
      apiKey: "AIzaSyDqykzzebL74usRTv9EZ8Ynn_pbJmQVTq0",
      authDomain: "diamond-store-hydra.firebaseapp.com",
      projectId: "diamond-store-hydra",
      storageBucket: "diamond-store-hydra.appspot.com",
      messagingSenderId: "263133028845",
      appId: "1:263133028845:web:7e84d809f3211e26dc47e4",
      measurementId: "G-B1RVH2CCX1"
    };

    // Initialize Firebase
    firebase.initializeApp(firebaseConfig);
    const db = firebase.firestore();

    // Fetch and display submissions
    db.collection('payments').onSnapshot((snapshot) => {
      const table = document.getElementById('submission-table');
      table.innerHTML = ''; // Clear existing rows
      snapshot.forEach((doc) => {
        const data = doc.data();
        const row = `
          <tr>
            <td>${data.buyerID}</td>
            <td>${data.paymentMethod}</td>
            <td><a href="${data.screenshotURL}" target="_blank">View</a></td>
            <td class="status ${data.status.toLowerCase()}">${data.status}</td>
            <td>
              <button class="success-btn" onclick="updateStatus('${doc.id}', 'Success')">Mark as Success</button>
              <button class="reject-btn" onclick="updateStatus('${doc.id}', 'Rejected')">Reject</button>
            </td>
          </tr>
        `;
        table.innerHTML += row;
      });
    });

    // Update status of a submission
    function updateStatus(id, status) {
      db.collection('payments').doc(id).update({ status });
      alert(`Status updated to: ${status}`);
    }
  </script>
